{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}
{% endblock %}

{% block body %}
	<div class="program">
		<img class="program-poster" src="{{program.poster}}" alt="{{ program.title }} poster">
		<div class="program-body">
			<h1>{{ program.title }}</h1>
			<p>{{ program.synopsis }}</p>
			<p>Catégorie :
				{{ program.category.name }}</p>
			Liste des saisons :
			<ul>

				{% for seasons in program.seasons %}
					<li>
						<a href='/program/{{program.id}}/season/{{seasons.id}}'>Saison
							{{ seasons.number }}</a>
					</li>
				{% endfor %}
			</ul>
			<strong>Acteurs :</strong>
			<ul>
				{% for actor in program.actors %}
					<li>
						<a href='/actor/{{actor.id}}'>
							{{ actor.name }}</a>
					</li>
				{% else %}
					<li>Aucun acteur pour cette série</li>
				{% endfor %}
			</ul>
		</div>
		<div class="back">
			<a href="{{ path('program_index') }}">
				Retour à la liste des programmes
			</a>
		</div>
	</div>


{% endblock %}
