{% extends 'base.html.twig' %}

{% block title %}
	{{ program.title }}
	- Saison
	{{ season.number }}


{% endblock %}

{% block body %}
	<div class="season">
		<img class="program-poster" src="{{program.poster}}" alt="{{ program.title }} poster">
		<div class="season-body">
			<h1>Saison
				{{ season.number }}
				de
				{{ program.title }}
			</h1>
			<p>{{ season.description }}</p>

			Liste des épisodes :
			<ul>
				{% for episodes in season.episodes %}
					<li>
						<a href='{{ path('program_episode_show', { "programId": program.id, "seasonId": season.id, "episodeId": episodes.id })}}'>Episode
							{{ episodes.number }}
							:
							{{ episodes.title }}
						</a>
					</li>
				{% endfor %}
			</ul>
		</div>
		<div class="back">
			<a href="{{ path('program_show', {"id": program.id})}}">
				Retour à la liste des saisons
			</a>
		</div>
	</div>


{% endblock %}
