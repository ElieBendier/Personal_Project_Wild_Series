{% extends 'base.html.twig' %}

{% block title %}
	{{ program.title }}
	- Saison
	{{ season.number }}


{% endblock %}

{% block body %}
	<div class="media">
		<div class="media-body">
			<h1 class="mt-0">Saison
				{{ season.number }}
				de
				{{ program.title }}
			</h1>
			<p>{{ season.description }}</p>

			Liste des épisodes :
			<ul>
				{% for episodes in season.episodes %}
					<li>
						<a href='{{ path('program_episode_show', { "programId": program.id, "seasonId": season.id, "episodeId": episodes.id })}}'>Episode
							{{ episodes.number }}
							:
							{{ episodes.title }}
						</a>
					</li>
				{% endfor %}
			</ul>
		</div>
	</div>

	<a href="{{ path('program_show', {"id": program.id})}}">
		Retour à la liste des saisons
	</a>
{% endblock %}
