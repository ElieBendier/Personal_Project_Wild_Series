{% extends 'base.html.twig' %}

{% block title %}All categories
{% endblock %}

{% block body %}
	<h1 class="page-title">Toutes les catégories !
	</h1>
	<div class="row">
		{% for category in categories %}
			<div class="col-sm-3">
				<div class="card">
					<div class="card-body">
						<h2 class="card-title">
							{{ category.name }}</h2>
					</div>
					<a href="{{ path("category_show", { categoryName: category.name }) }}" class="btn btn-dark">Voir les séries</a>
				</div>
			</div>

		{% else %}
			Aucune catégorie trouvée.
		{% endfor %}
	</div>
	<div class="add-category">
		<p>La catégorie que vous recherchez n'existe pas encore ?
			<a href="{{ path("category_new") }}">Ajoutez-la !</a>
		</p>
	</div>

	<a href="{{ path('app_index') }}" class="back-home">
		Retour à l'accueil
	</a>

{% endblock %}
